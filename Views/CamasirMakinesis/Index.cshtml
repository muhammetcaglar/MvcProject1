@model IEnumerable<BeyazEsyaProje.Models.CamasirMakinesi>

@{
    ViewBag.Title = "Index";
}

<h2>Çamaşır Makinesi</h2>

<p class="btn btn-danger">
    @Html.ActionLink("Ekle", "Create", new { @class = "btn btn-danger" }, new { @style = " text-decoration:none; color:white" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Renk)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boyutlar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProgramSayisi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Renk)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Boyutlar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProgramSayisi)
        </td>
        <td >
            <span  class="btn btn-danger">
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @style = " text-decoration:none; color:white" }) 
            </span>
            <span class="btn btn-danger">
                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @style = " text-decoration:none; color:white" }) 

            </span>
            <span  class="btn btn-danger">
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @style = " text-decoration:none; color:white" })

            </span>
        </td>
    </tr>
}

</table>
